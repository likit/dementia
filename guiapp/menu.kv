    font_size: 24
    bold: True
    height: 50
    size_hint_y: None
    size_hint_x: 1
    background_normal: 'button_normal.png'
    background_down: 'button_down.png'
    border: (2, 2, 2, 2)

<Menu@GridLayout>
    padding: 10
    spacing: 3
